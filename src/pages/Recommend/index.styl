@import '~common/stylus/variable';

.am-list-header {
	padding: 0;
}

.recommend-img {
	width: 100%;
}

.list-title {
	text-align: center;
	font-size: $font-size-medium;
	color: $color-theme;
	padding: 10px 0;
}

.item {
	display: flex;
	box-sizing: border-box;
	align-items: center;
	padding: 10px;
	background: $color-background;

	.icon {
		flex: 0 0 60px;
		width: 60px;
		padding-right: 20px;
	}

	.text {
		display: flex;
		flex-direction: column;
		justify-content: center;
		flex: 1;
		line-height: 20px;
		overflow: hidden;
		font-size: $font-size-medium;

		.name {
			margin-bottom: 10px;
			color: $color-text;
		}

		.desc {
			color: $color-text-d;
		}
	}
}
